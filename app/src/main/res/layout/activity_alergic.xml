<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >


    <!-- 뒤로 가기 버튼 -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:contentDescription="뒤로 가기"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 제목 -->

    <!-- 직접 입력 버튼 -->

    <!-- 선택된 항목들 -->


    <!-- 완료 버튼 -->

    <!-- 메시지 영역 -->

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="let me know your allergies."
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_complete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/black"
        android:text="0 Confirm"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="391dp"
        android:layout_height="137dp"
        android:layout_marginTop="8dp"

        app:layout_constraintEnd_toEndOf="@+id/imageButton5"
        app:layout_constraintStart_toStartOf="@+id/imageButton5"
        app:layout_constraintTop_toBottomOf="@+id/imageButton5">


        <TextView
            android:id="@+id/TextView_msgegg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/minisel"
            android:maxWidth="250dp"
            android:padding="6dp"
            android:text=" Eggs "
            android:textColor="#121111"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_msgmeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/minisel"
            android:maxWidth="250dp"
            android:padding="6dp"
            android:text=" Meat "
            android:textColor="#121111"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView_msgahwang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/minisel"
            android:maxWidth="250dp"
            android:padding="6dp"
            android:text=" Sulfites "
            android:textColor="#121111"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView_msgmilk"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_msgvega"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/minisel"
            android:maxWidth="250dp"
            android:padding="6dp"
            android:text=" Vegetables "
            android:textColor="#121111"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView_msgahwang"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_msghardseafood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="96dp"
            android:background="@drawable/minisel"
            android:maxWidth="250dp"
            android:padding="6dp"
            android:text=" Crustaceans "
            android:textColor="#121111"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView_msgseafood"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_msgmilk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/minisel"
            android:maxWidth="250dp"
            android:padding="6dp"
            android:text=" Dairy products "
            android:textColor="#121111"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView_msgmeat"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_msgfruitvega"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/minisel"
            android:maxWidth="250dp"
            android:padding="6dp"
            android:text=" Fruits "
            android:textColor="#121111"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/TextView_msgegg"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_msgseed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/minisel"
            android:maxWidth="250dp"
            android:padding="6dp"
            android:text=" 	Grains "
            android:textColor="#121111"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView_msgfruitvega"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_msgnut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/minisel"
            android:maxWidth="250dp"
            android:padding="6dp"
            android:text=" 	Nuts "
            android:textColor="#121111"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView_msgseed"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_msgjoga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/minisel"
            android:maxWidth="250dp"
            android:padding="6dp"
            android:text=" Shellfish "
            android:textColor="#121111"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView_msgnut"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_msgseafood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="96dp"
            android:background="@drawable/minisel"
            android:maxWidth="250dp"
            android:padding="6dp"
            android:text=" Seafood "
            android:textColor="#121111"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="373dp"
        android:layout_height="85dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#F0EEEE"
        android:contentDescription="선택 이미지 버튼"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintVertical_bias="0.483"
        app:srcCompat="@drawable/whatselect" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewBig"
        android:layout_width="412dp"
        android:layout_height="227dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_complete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.013" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMini"
        android:layout_width="383dp"
        android:layout_height="190dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/recyclerViewBig"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="@+id/recyclerViewBig"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewBig" />


</androidx.constraintlayout.widget.ConstraintLayout>
